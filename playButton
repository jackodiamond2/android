using UnityEngine;
using System.Collections;

public class playButton : MonoBehaviour {

	public Camera main;
	public AudioSource asource; 
	int t;
	// Use this for initialization
	void Start () {
		asource = GetComponent<AudioSource> ();
		GoogleMobileAdsDemoScript.RequestBanner ();
		GoogleMobileAdsDemoScript.RequestInterstitial (); 
		main = (Camera) GameObject.FindObjectOfType(typeof(Camera));
		t = 0;
	} 
//	main.transform.position = Vector3.Lerp(new Vector3(0f,0f,-10f), new Vector3(8.64f,0f,-10f), Time.deltaTime*2f);
	// Update is called once per frame
/*	void FixedUpdate () {
		 
		if (main.transform.position.x > 7.5) {
			t =0;  
		}

		if (t ==1) {
			main.transform.position = new Vector3 (main.transform.position.x + 0.1f, main.transform.position.y, main.transform.position.z);
		}

	}
	*/ 
	public void playit(){
		asource.Play ();   
		  
		GoogleMobileAdsDemoScript.ShowInterstitial (); 
		GoogleMobileAdsDemoScript.RequestInterstitial ();   
		t = 1;

	}     

	public void pauseit(){ 
		asource.Pause ();
		GoogleMobileAdsDemoScript.ShowInterstitial ();
		GoogleMobileAdsDemoScript.RequestInterstitial ();
	}  

	public void exit(){
	
		Application.Quit (); 
	}

}
